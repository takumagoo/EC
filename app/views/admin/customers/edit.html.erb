<h1>Admin::Customers#edit</h1>
<p>Find me in app/views/admin/customers/edit.html.erb</p>

<%= @customer.last_name %>
<%= @customer.first_name %>さんの会員情報編集

<%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
  <p>会員ID</p>
  <%= f.text_field :customers.id %>

  <p>氏名</p>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>

  <p>フリガナ</p>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>

  <p>郵便番号</p>
  <%= f.text_field :postal_code %>

  <p>住所</p>
  <%= f.text_field :address %>

  <p>電話番号</p>
  <%= f.text_field :telephone_number %>

  <p>メールアドレス</p>
  <%= f.text_field :email %>

  <p>会員ステータス</p>
  <%= f.radio_button :is_deleted, "valid" %>
  <%= f.label :is_deleted_valid, "販売中" %>

  <%= f.radio_button :is_deleted, "withdrawal" %>
  <%= f.label :is_deleted_withdrawal, "販売停止" %>

  <%= f.submit '変更を保存' %>
<% end %>
