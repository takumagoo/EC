<header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <h1>LOGO</h1>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
              <li class="nav-item"><%= link_to "商品一覧", admin_items_path, class: "btn btn-sm btn-outline-secondary" %></li>
              <li class="nav-item"><%= link_to "会員一覧", admin_customers_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
              <li class="nav-item"><%= link_to "注文履歴一覧", admin_root_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
              <li class="nav-item"><%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
              <li class="nav-item"><%= link_to "ログアウト",  destroy_admin_session_path, method: :delete, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
          </ul>
        </div>
      </div>
    </nav>
</header>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報</h4>

      <div class="row">
        <div class="col-md-4">
          <label>会員ID</label>
        </div>
        <div class="col-md-8">
          <%= @customer.id %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <label>氏名</label>
        </div>
        <div class="col-md-8">
          <%= @customer.last_name %><%= @customer.first_name %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <label>フリガナ</label>
        </div>
        <div class="col-md-8">
          <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <label>郵便番号</label>
        </div>
        <div class="col-md-8">
          <%= @customer.postal_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <label>住所</label>
        </div>
        <div class="col-md-8">
          <%= @customer.address %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <label>電話番号</label>
        </div>
        <div class="col-md-8">
          <%= @customer.telephone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <label>メールアドレス</label>
        </div>
        <div class="col-md-8">
          <%= @customer.email %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <label>会員ステータス</label>
        </div>
        <div class="col-md-8">
          <% if @customer.is_deleted == false %>
            有効
          <% else %>
            退会
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 offset-md-2">
          <!--編集ボタン-->
          <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
        </div>
        <div class="col-md-8">
          <!--編集ボタン-->
          <%= link_to '注文履歴一覧を見る',  admin_root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

