<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <h4>商品一覧</h4>

      <%= link_to new_admin_item_path, class: "nav-link text-light" do %>
        <i class="fal fa-plus-circle"></i>
      <% end %>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <!--<th colspan="3"></th>-->
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active %>
                  <p class="text-success font-weight-bold">販売中</p>
                <% else %>
                  <p class="text-success  font-weight-bold">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>