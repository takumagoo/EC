
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <h4 class="bg-secondary text-dark d-inline-block">商品編集</h4>

        <%= form_with model: @item, url:admin_item_path, method: :patch do |f| %>
          <div class="row">
            <div class="col-3 pb-3">
              <label>商品画像</label>
            </div>
            <div class="col-9 pb-3">
              <%= f.file_field :image, accept: "image/*" %>
            </div>
          </div>
          <div class="row">
            <div class="col-3 pb-3">
              <label>商品名</label>
            </div>
            <div class="col-9 pb-3">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-3 pb-3">
              <label>商品説明</label>
            </div>
            <div class="col-9 pb-3">
              <%= f.text_area :introduction %>
            </div>
          </div>
          <div class="row">
            <div class="col-3 pb-3">
              <label>ジャンル</label>
            </div>
            <div class="col-9 pb-3">
              <%= f.select :genres_id, options_from_collection_for_select(Genre.all, :id, :name) %>
            </div>
          </div>
          <div class="row">
            <div class="col-3 pb-3">
              <label>税抜価格</label>
            </div>
            <div class="col-9 pb-3">
              <%= f.text_field :price %>
            </div>
          </div>
          <div class="row">
            <div class="col-3 pb-3">
              <label>販売ステータス</label>
            </div>
            <div class="col-9 pb-3">
              <%= f.radio_button :is_active, "sale" %>
              <%= f.label :is_active_sale, "販売中" %>

              <%= f.radio_button :is_active, "sale_stop" %>
              <%= f.label :is_active_sale_stop, "販売停止" %>
            </div>
          </div>
          <div class="col-md-9 offset-md-3">
            <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
        <% end %>

    </div>
  </div>
</div>
