<!DOCTYPE html>
<html>
  <head>
    <title>EC</title>
    <!--<meta name="viewport" content="width=device-width,initial-scale=1">-->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <h1>Logo</h1>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <ul class="navbar-nav ml-auto">

            <% if admin_signed_in? %>
                <li class="nav-item"><%= link_to "商品一覧", admin_items_path %></li>
                <li class="nav-item">会員一覧</li>
                <li class="nav-item"><%#= link_to "注文履歴一覧", admin_homes_about_path %>注文履歴一覧</li>
                <li class="nav-item"><%= link_to "ジャンル一覧", admin_genres_path %></li>
                <li class="nav-item"><%= link_to "ログアウト",  destroy_admin_session_path, method: :delete %></li>
            <% else %>
                <li class="nav-item"><%= link_to "About", admin_homes_about_path %></li>
                <li class="nav-item"><%= link_to "商品一覧", admin_items_path %></li>
                <li class="nav-item"><%= link_to "新規登録", new_admin_session_path %></li>
                <li class="nav-item"><%= link_to "ログイン", new_admin_session_path %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
       <%= yield %>
    </main>

    <footer>

    </footer>
  </body>
</html>
