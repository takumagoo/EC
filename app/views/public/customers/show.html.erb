<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <h1>LOGO</h1>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
            <li>ようこそ、<%=current_customer.last_name %>さん!</li>
            <li class="nav-item"><%= link_to "マイページ", customers_my_page_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
            <li class="nav-item"><%= link_to "商品一覧", items_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
            <li class="nav-item"><%= link_to "カート", cart_items_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
            <li class="nav-item"><%= link_to "ログアウト",  destroy_customer_session_path, method: :delete, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-5 pb-2">
          <h4>マイページ</h4>
        </div>
      </div>
      <div class="row mb-2">
        <lable class="mr-2"><strong>登録情報</strong></lable>
        <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success" %>
      </div>

      <div class="col-10 border border-dark mb-3">
        <div class="row border-bottom border-dark">
          <div class="col-3 border-right border-dark">
            <lable>氏名</lable>
          </div>
          <div class="col-9">
            <%= current_customer.last_name %><%= current_customer.first_name %>
          </div>
        </div>

        <div class="row border-bottom border-dark">
          <div class="col-3 border-right border-dark">
            <lable>カナ</lable>
          </div>
          <div class="col-9">
            <%= current_customer.last_name_kana %><%= current_customer.first_name_kana %>
          </div>
        </div>

        <div class="row border-bottom border-dark">
          <div class="col-3 border-right border-dark">
            <lable>郵便番号</lable>
          </div>
          <div class="col-9">
            <%= current_customer.postal_code %>
          </div>
        </div>

        <div class="row border-bottom border-dark">
          <div class="col-3  border-right border-dark">
            <lable>住所</lable>
          </div>
          <div class="col-9">
            <%= current_customer.address %>
          </div>
        </div>

         <div class="row border-bottom border-dark">
          <div class="col-3 border-right border-dark">
            <lable>電話番号</lable>
          </div>
          <div class="col-9">
            <%= current_customer.telephone_number %>
          </div>
        </div>

        <div class="row border-bottom border-dark">
          <div class="col-3 border-right border-dark">
            <lable>メールアドレス</lable>
          </div>
          <div class="col-9">
            <%= current_customer.email %>
          </div>
        </div>
      </div>
      <div class="mb-2">
        <lable class="mr-4"><strong>配送先</strong></lable>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
      </div>
      <div>
        <lable class="mr-3"><strong>注文履歴</strong></lable>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

