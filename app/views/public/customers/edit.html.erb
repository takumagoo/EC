<p id="notice"></p>
<h4>会員情報編集</h4>
<%= form_with model: @customer, url:customer_path(@customer.id), method: :patch do |f| %>
  <p>氏名</p>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>
  <p>カナ</p>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>
  <p>郵便番号</p>
  <%= f.text_field :postal_code %>
  <p>住所</p>
  <%= f.text_field :address %>
  <p>電話番号</p>
  <%= f.text_field :telephone_number %>
  <p>メールアドレス</p>
  <%= f.text_field :email %>
  <%= f.submit '編集内容を保存', class: "btn btn-success" %>
<% end %>
<%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
