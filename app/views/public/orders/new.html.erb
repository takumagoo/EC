<h4>注文情報入力</h4>

<%= form_with model: @order, url:orders_confirm_path, method: :post do |f| %>

  <h4>支払い方法</h4>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method_credit_card, "クレジットカード" %>

  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method_transfer, "銀行振込" %>

  <h4>お届け先</h4>
  <%= f.radio_button :address_select, "myaddress" %>
  <%= f.label :address_select, "ご自身の住所" %> </br>
  <%= current_customer.address %>

  <%= f.radio_button :address_select, "registered_address" %>
  <%= f.label :address_select, "登録済み住所から選択" %></br>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></br>

  <%= f.radio_button :address_select, "new_address" %>
  <%= f.label :address_select, "新しいお届け先" %></br>
  <label>郵便番号(ハイフンなし)</label></br>
  <%= f.text_field :postal_code %></br>
  <label>住所</label></br>
  <%= f.text_field :address %></br>
  <label>宛名</label></br>
  <%= f.text_field :name %></br>

  <%= f.submit '確認画面に進む', class: "btn btn-primary" %>
<% end %>

