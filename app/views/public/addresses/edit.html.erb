<h4>配送先編集</h4>

<%= form_with model: @address, url:address_path, method: :patch do |f| %>
  <label>郵便番号</label>
  <%= f.text_field :postal_code %>
  <label>住所</label>
  <%= f.text_field :address %>
  <label>宛名</label>
  <%= f.text_field :name %>
  <%= f.submit '変更内容を保存', class: "btn btn-success" %>
<% end %>
