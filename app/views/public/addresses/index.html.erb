<h4>配送先登録/一覧</h4>
<%= form_with model: @address, url:addresses_path do |f| %>
  <label>郵便番号</label>
  <%= f.text_field :postal_code %>
  <label>住所</label>
  <%= f.text_field :address %>
  <label>宛名</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>
<br/>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %></td>
        <td><%= link_to "削除", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
