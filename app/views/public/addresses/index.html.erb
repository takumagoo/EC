<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <h1>LOGO</h1>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
            <li>ようこそ、<%=current_customer.last_name %>さん!</li>
            <li class="nav-item"><%= link_to "マイページ", customers_my_page_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
            <li class="nav-item"><%= link_to "商品一覧", items_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
            <li class="nav-item"><%= link_to "カート", cart_items_path, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
            <li class="nav-item"><%= link_to "ログアウト",  destroy_customer_session_path, method: :delete, class: "btn btn-sm btn-outline-secondary ml-3" %></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4 mb-3">
          <h4>配送先登録/一覧</h4>
        </div>
      </div>
      <!--<div class="row  mb-3">-->
        <%= form_with model: @address, url:addresses_path do |f| %>
          <div class="row">
            <div class="col-md-3">
              <label>郵便番号(ハイフンなし)</label>
            </div>
            <div class="col-md-8">
              <%= f.text_field :postal_code %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <label>住所</label>
            </div>
            <div class="col-md-8">
              <%= f.text_field :address %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <label>宛名</label>
            </div>
            <div class="col-md-4">
              <%= f.text_field :name %>
            </div>
            <div class="col-md-4">
              <%= f.submit '新規登録', class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      <!--</div>-->

      <table class="table mb-0 mt-3 border border-dark">
        <thead class="table-secondary">
          <tr>
            <th class="border-right border-dark">郵便番号</th>
            <th class="border-right border-dark">住所</th>
            <th class="border-right border-dark">宛名</th>
            <th class="border-top border-bottom border-dark"></th>
            <th class="border-top border-bottom border-dark"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td class="border-right border-dark"><%= address.postal_code %></td>
              <td class="border-right border-dark"><%= address.address %></td>
              <td class="border-right border-dark"><%= address.name %></td>
              <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %></td>
              <td><%= link_to "削除", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

